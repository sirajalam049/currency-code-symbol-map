{
    "compilerOptions": {
        "target": "es6", 
        "module": "esnext",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom",
            "esnext"
        ],
        "declaration": true,
        "outDir": "lib", 
        "noImplicitAny": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
    },
    "include": [
        "src"
    ]
}